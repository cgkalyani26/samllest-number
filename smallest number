def find_smallest(lst):
    # initialize the smallest number to the first element in the list
    smallest = lst[0]
    
    # loop through the rest of the list to find the smallest number
    for num in lst:
        if num < smallest:
            smallest = num
    
    return smallest

# example list
list1 = [5, 7, 9, 14, 10, 20, 4]

# call the find_smallest function and print the result
print("The smallest number in the list is:", find_smallest(list1))
